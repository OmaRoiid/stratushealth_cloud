<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="300dp"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:background="@color/white"
  android:layout_height="wrap_content">
  <TextView
    android:id="@+id/tv_shared_link"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:text="Shared Link"
    android:textStyle="bold"
    android:textSize="18sp"
    android:textColor="@color/colorPrimary"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    />
  <View
    android:id="@+id/v_divider"
    android:layout_width="match_parent"
    android:layout_height="2dp"
    android:background="@color/md_grey_300"
    android:layout_marginTop="8dp"
    app:layout_constraintTop_toBottomOf="@+id/tv_shared_link"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    />
  <android.support.constraint.ConstraintLayout
    android:id="@+id/layout_link"
    android:layout_width="250dp"
    android:layout_height="200dp"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:background="@drawable/roundedlayout"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/v_divider">
    <com.silverkey.Views.TextViewWithFont
      android:id="@+id/tv_link"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="16dp"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:padding="10dp"
      android:text="sad"
      android:textColor="#1E90FF"
      android:textIsSelectable="true"
      android:textSize="16sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>
  </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>