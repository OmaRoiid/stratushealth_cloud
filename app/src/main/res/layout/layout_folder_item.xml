<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:background="@color/background">
  <android.support.constraint.ConstraintLayout
    android:id="@+id/folder_layout"
    android:layout_width="306dp"
    android:layout_height="wrap_content"
    app:layout_constraintEnd_toStartOf="@+id/iv_folder_dots"
    app:layout_constraintHorizontal_bias="0.222"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    <ImageView
      android:id="@+id/iv_folder"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:layout_marginStart="8dp"
      android:src="@drawable/icon_folder"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"/>
    <com.silverkey.Views.TextViewWithFont
      android:id="@+id/tv_folder_name"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:layout_marginStart="28dp"
      android:padding="8dp"
      android:text="@string/folder_name_tv"
      android:textColor="@color/colorPrimary"
      android:textSize="16sp"
      app:layout_constraintStart_toEndOf="@+id/iv_folder"
      app:layout_constraintTop_toTopOf="parent"/>
  </android.support.constraint.ConstraintLayout>
  <ImageView
    android:id="@+id/iv_folder_dots"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/icon_dots"
    android:layout_marginTop="12dp"
    android:layout_marginRight="10dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    />
  <View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginTop="16dp"
    android:background="@color/md_grey_300"
    app:layout_constraintTop_toBottomOf="@+id/iv_folder_dots"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    />

</android.support.constraint.ConstraintLayout>