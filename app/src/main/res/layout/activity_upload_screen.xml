<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/background"
  android:orientation="vertical"
  tools:context=".PHR.UploadedFilesScreen.UploadedFilesScreen">
  <android.support.v7.widget.Toolbar
    android:id="@+id/main_toolbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/action_bar_height"
    android:background="@color/colorPrimary"
    app:layout_constraintBottom_toTopOf="@+id/uploaded_files_list_swipe"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent">
    <TextView
      android:id="@+id/tv_tittle"
      android:textStyle="normal"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="15dp"
      android:layout_gravity="center"
      android:padding="10dp"
      android:text="@string/my_files"
      android:textColor="@color/white"
      android:textSize="20sp"/>
  </android.support.v7.widget.Toolbar>


  <android.support.design.widget.FloatingActionButton
    android:id="@+id/upload_btn"
    android:layout_width="56dp"
    android:layout_height="56dp"
    android:layout_margin="15dp"
    android:layout_marginBottom="568dp"
    android:layout_marginEnd="268dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentEnd="true"
    app:elevation="8dp"
    android:scaleType="center"
    android:src="@mipmap/upload_file"
    app:layout_anchorGravity="bottom|right|end"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:fabSize="auto"
    tools:ignore="NotSibling"/>
  <android.support.v4.widget.SwipeRefreshLayout
    android:id="@+id/uploaded_files_list_swipe"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/main_toolbar"
    >
    <android.support.v7.widget.RecyclerView
      android:id="@+id/uploaded_files_list"

      android:layout_width="match_parent"
      android:padding="8dp"
      android:layout_height="wrap_content"
      tools:listitem="@layout/file_item_layout"
      >
    </android.support.v7.widget.RecyclerView>


  </android.support.v4.widget.SwipeRefreshLayout>

</android.support.constraint.ConstraintLayout>
